<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simplefeed" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_600</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_700</item>
        <item name="colorSecondaryVariant">@color/gray_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/gray_100</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Simplefeed.NoActionBar" >
        <item name="android:statusBarColor">@color/gray_100</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Orientalism.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">0.8</item>
    </style>
</resources>